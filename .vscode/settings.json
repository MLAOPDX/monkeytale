{
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "cSpell.words": [
        "Butterick",
        "Fuggly's"
    ],
    "coverage-gutters.customizable.context-menu": false,
    "debug.terminal.clearBeforeReusing": true,
    "editor.foldingImportsByDefault": true,
    "editor.fontFamily": "'Triplicate T3c', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 16,
    "editor.formatOnSave": true,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 5000,
    "files.exclude": {
        "**/.coverage*": true,
        "**/.hypothesis": true,
        "**/.ipynb_checkpoints": true,
        "**/.pdm.toml": true,
        "**/.pytest_cache": true,
        "**/__pycache__": true,
        "**/__pypackages__": true,
        "**/cov.xml": true
    },
    "files.insertFinalNewline": true,
    "git.autoStash": true,
    "git.autofetch": "all",
    "git.confirmEmptyCommits": false,
    "git.enableSmartCommit": true,
    "git.fetchOnPull": true,
    "git.followTagsWhenSync": true,
    "git.mergeEditor": true,
    "git.showPushSuccessNotification": true,
    "koverage.coverageFileNames": [
        "cov.xml"
    ],
    "koverage.coverageFilePaths": [
        "tests"
    ],
    "koverage.lowCoverageThreshold": 80,
    "koverage.sufficientCoverageThreshold": 90,
    "markdown-preview-enhanced.breakOnSingleNewLine": false,
    "markdown-preview-enhanced.enableCriticMarkupSyntax": true,
    "markdown-preview-enhanced.enableExtendedTableSyntax": true,
    "markdown-preview-enhanced.enableTypographer": true,
    "markdown-preview-enhanced.frontMatterRenderingOption": "table",
    "markdown-preview-enhanced.latexEngine": "prince",
    "merge-conflict.autoNavigateNextConflict.enabled": true,
    "notebook.output.textLineLimit": 500,
    "python.defaultInterpreterPath": "",
    "python.formatting.blackPath": "black",
    "python.formatting.provider": "black",
    "python.languageServer": "Pylance",
    "python.linting.enabled": true,
    "python.sortImports.args": [
        "--profile=black"
    ],
    "python.testing.autoTestDiscoverOnSaveEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.testing.pytestPath": "pytest",
    "python.testing.unittestEnabled": false,
    "scm.diffDecorationsGutterVisibility": "hover",
    "terminal.integrated.shellIntegration.enabled": true,
    "window.commandCenter": true,
    "workbench.editor.closeOnFileDelete": true
}
